{
  "image": "python:3.9",
  "forwardPorts": [8000],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "standard",
        "terminal.integrated.profiles.linux": {
          "standard": {
            "path": null
          }
        },
        "python.pythonPath": "/usr/local/bin/python",
        "python.autoComplete.addBrackets": true,
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.pylintArgs": [
          "--disable=C0114",
          "--disable=C0115",
          "--disable=C0116"
        ]
      }
    }
  },
  "appPort": [8000],
  "postCreateCommand": "pip install fastapi uvicorn[standard]"
}
